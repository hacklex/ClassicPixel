<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
        x:Class="PixelEditor.NewCanvasDialog"
        Title="New Canvas"
        Width="300" Height="200"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Canvas Width:" Margin="0,5" />
        <NumericUpDown Name="WidthInput" Value="32" Minimum="1" Maximum="1024" />
        
        <TextBlock Text="Canvas Height:" Margin="0,5" />
        <NumericUpDown Name="HeightInput" Value="32" Minimum="1" Maximum="1024" />
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Click="OnCancelClick" Margin="0,0,10,0" />
            <Button Content="Create" Click="OnCreateClick" />
        </StackPanel>
    </StackPanel>
</Window>
