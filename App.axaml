<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:pixelEditor="clr-namespace:PixelEditor"
             x:Class="PixelEditor.App">
    <Application.Styles>
        <ClassicTheme />
    </Application.Styles>
    <Application.Resources>
        <ImageBrush TileMode="Tile" Stretch="None" SourceRect="0 0 6 6" DestinationRect="0 0 6 6" AlignmentX="Left" AlignmentY="Top" x:Key="BgBrush" Source="/Assets/BgPattern.png"></ImageBrush>
        <ImageBrush TileMode="Tile" Stretch="None" SourceRect="0 0 16 16" DestinationRect="0 0 16 16" AlignmentX="Left" AlignmentY="Top" x:Key="SelectionBrush" Source="/Assets/SelectionBrush.png">
            <ImageBrush.Transform>
                <TranslateTransform X="0" Y="0"></TranslateTransform>
            </ImageBrush.Transform>
        </ImageBrush> 
        <pixelEditor:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
    </Application.Resources>
</Application>
